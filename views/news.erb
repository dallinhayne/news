 <div class="forecast">
      <h1>Current Weather</h1>
      <p>
      <%="Current temperature is #{@current_temp} degrees."%>
      </p>
      <p>
      <h2>Forecast for the Week</h2>
        <% for daily_forecast in @forecast["daily"]["data"] %>
       <div> <%= " The next day has a high temperature of #{daily_forecast["temperatureHigh"]}. #{daily_forecast["summary"]}" %></div>

       <% end %>

       <P>
<hr>

    </p>  
      <iframe
        width="600"
        height="450"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
          &q=<%= @lat %>,<%= @long %>&zoom=6" allowfullscreen>
      </iframe>
<hr>
      <div class = "LogoTitle"><strong>NATIONAL NEWS</strong></div>
       
    <p></p>
     <% for top_article in @news["articles"] %>
       <div class = "container">
       <div class = "row">
       <div class="col-2"><%= top_article["source"]["name"] %></div>
       <div class="col-2"><%= top_article["author"] %></div>
       <div class="col-5"> <%= top_article["description"] %> </div>
       <div class="col-3"> <a href="<%= top_article["url"] %>"> <%= top_article["title"] %> </a> </div>
    </div>
    </div>
       <% end %>
<hr>
    </div>



